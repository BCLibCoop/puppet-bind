//
// named.conf
// WARNING: Puppet managed, do not edit!
//
<%
def join_enumerable_fallback(value, joiner)
	if value.kind_of?(Enumerable)
		return value.join(joiner)
	else
		return value
	end
end
-%>

<% if !@acls.empty? -%>
<% @acls.sort_by {|key, value| key}.each do |key,value| -%>
acl <%= key %> {
<% value.each do |line| -%>
    <%= line %>;
<% end -%>
};

<% end -%>
<% end -%>
<% if !@masters.empty? -%>
<% @masters.sort_by {|key, value| key}.each do |key,value| -%>
masters <%= key %> {
<% value.each do |line| -%>
    <%= line %>;
<% end -%><%# value.each -%>
};

<% end -%><%# @masters.sort_by.each -%>
<% end -%><%# !@masters.empty? -%>

<% if !@statistics_channels.empty? -%>
statistics-channels {
<% @statistics_channels.each do |stat_channel,stat_channel_settings|-%>
  <%- if stat_channel_settings.is_a?(Hash) -%>
  <%- if stat_channel_settings['listen_address'] and !stat_channel_settings['listen_address'].empty? and stat_channel_settings['listen_port'] and !stat_channel_settings['listen_port'].empty? -%>
  inet <%=stat_channel_settings['listen_address']%> port <%= stat_channel_settings['listen_port'] %> allow { <%=stat_channel_settings['allow'].join('; ')%>; };
  <%- end -%>
<%- end -%>
<%- end -%>
};
<%- end -%>

options {
<% if !@listen_on.empty? -%>
<% @listen_on.sort_by {|key, value| key}.each do |key,value| -%>
    listen-on port <%= key %> { <%= join_enumerable_fallback(value,'; ') %>; };
<% end -%><%# @listen_on.sort_by.each -%>
<% end -%><%# !@listen_on.empty? -%>
<% if !@listen_on_v6.empty? -%>
<% @listen_on_v6.sort_by {|key, value| key}.each do |key,value| -%>
    listen-on-v6 port <%= key %> { <%= join_enumerable_fallback(value,'; ') %>; };
<% end -%><%# @listen_on_v6.sort_by.each -%>
<% end -%><%# !@listen_on_v6.empty? -%>
<% if !@forwarders.empty? -%>
    forwarders { <%= join_enumerable_fallback(@forwarders,'; ') %>; };
<% end -%>
    directory "<%= @directory %>";
<% if @managed_keys_directory -%>
    managed-keys-directory "<%= @managed_keys_directory %>";
<% end -%>
<% if @hostname -%>
    hostname "<%= @hostname %>";
<% end -%>
<% if @server_id -%>
    server-id "<% @server_id.each_byte do |byte| -%><%= byte.to_s(base=16) %><% end -%>";
<% end -%>
<% if @version -%>
    version "<%= @version %>";
<% end -%>
<% if @dump_file -%>
    dump-file "<%= @dump_file %>";
<% end -%>
<% if @statistics_file -%>
    statistics-file "<%= @statistics_file %>";
<% end -%>
<% if @memstatistics_file -%>
    memstatistics-file "<%= @memstatistics_file %>";
<% end -%>
<% if !@allow_query.empty? -%>
    allow-query { <%= join_enumerable_fallback(@allow_query,'; ') %>; };
<% end -%>
<% if !@allow_query_cache.empty? -%>
    allow-query-cache { <%= join_enumerable_fallback(@allow_query_cache,'; ') %>; };
<% end -%>
<% if @recursion -%>
    recursion <%= @recursion %>;
<% end -%>
<% if !@allow_recursion.empty? -%>
    allow-recursion { <%= join_enumerable_fallback(@allow_recursion,'; ') %>; };
<% end -%>
<% if !@allow_transfer.empty? -%>
    allow-transfer { <%= join_enumerable_fallback(@allow_transfer,'; ') %>; };
<% end -%>
<% if !@allow_update.empty? -%>
    allow-update { <%= join_enumerable_fallback(@allow_update,'; ') %>; };
<% end -%>
<% if !@check_names.empty? -%>
<% @check_names.each do |line| -%>
    check-names <%= line %>;
<% end -%><%# @check_names.each -%>
<% end -%><%# !@check_names.empty? -%>

<% if !@extra_options.empty? -%>
<% @extra_options.sort_by {|key, value| key}.each do |key,value| -%>
    <%= key %> <%= value %>;
<% end -%>
<% end -%>

<% if @dnssec_enable -%>
    dnssec-enable <%= @dnssec_enable %>;
<% end -%>
<% if @dnssec_validation -%>
    dnssec-validation <%= @dnssec_validation %>;
<% end -%>
<% if @dnssec_lookaside -%>
    dnssec-lookaside <%= @dnssec_lookaside %>;
<% end -%>
<% if @bindkeysfile -%>
    /* Path to ISC DLV key */
    bindkeys-file "<%= @bindkeysfile %>";
<% end -%>
};

<% if @logging == 'yes' and @logfile -%>
logging {
    channel main_log {
        file "<%= @logfile %>" versions 3 size 5m;
        severity info;
        print-time yes;
        print-severity yes;
        print-category yes;
    };
    category default{
        main_log;
    };
    category lame-servers {
        null;
    };
};
<% end -%>
<% if !@keys.empty? -%>
<% @keys.sort_by {|key, value| key}.each do |key,value| -%>
key "<%= key %>" {
<% value.each do |line| -%>
    <%= line %>;
<% end -%>
};

<% end -%>
<% end -%>
<% if !@views.empty? -%>

<% @views.sort_by {|key,value| key}.each do |key,value| -%>
<% valid_keys = %w(
    allow-notify allow-query allow-recursion allow-transfer
    allow-update allow-update-forwarding
    also-notify
    forwarders
    match-clients match-destinations match-recursive-only
    rrset-order
    sortlist) -%>
view "<%= key %>" {
<% valid_keys.sort.each do |valid_key| -%>
<% if value[valid_key] and !value[valid_key].empty? -%>
    <%= valid_key %> { <%= join_enumerable_fallback(value[valid_key], '; ') %>; };
<% end -%>
<% end -%>
<% if value['servers'] and !value['servers'].empty? -%>
<% value['servers'].sort_by {|key, value| key}.each do |key,value| -%>
    server <%= key %> { <%= join_enumerable_fallback(value,'; ') %>; };
<% end -%><%# value['servers'].sort_by.each -%>
<% end -%><%# value['servers'] and !value['servers'].empty? -%>
<% if value['extra_options'] and !value['extra_options'].empty? -%>
<% value['extra_options'].sort_by {|key, value| key}.each do |key,value| -%>
    <%= key %> <%= value %>;
<% end -%><%# value['extra_options'].sort_by.each -%>
<% end -%><%# value['extra_options'] and !value['extra_options'].empty? -%>
<% if value['includes'] and !value['includes'].empty? -%>
<% value['includes'].each do |filename| -%>
    include "<%= filename %>";
<% end -%><%# value['includes'].sort_by.each -%>
<% end -%><%# value['includes'] and !value['includes'].empty? -%>
<% if value['zones'] and !value['zones'].empty? -%>
    /* View specific zones */
<% value['zones'].sort_by {|key, value| key}.each do |key,value| -%>
    zone "<%= key %>" IN {
<% value.each do |line| -%>
        <%= line %>;
<% end -%><%# value.each -%>
    };

<% end -%><%# value['zones'].sort_by.each -%>
<% if !@zones.empty? -%>
    /* Global zones */
<% @zones.sort_by {|key, value| key}.each do |key,value| -%>
    zone "<%= key %>" IN {
<% value.each do |line| -%>
        <%= line %>;
<% end -%><%# value.each -%>
    };

<% end -%><%# @zones.sort_by.each -%>
<% end -%><%# !@zones.empty? -%>
<% end -%><%# @views.sort_by.each -%>
};
<% end -%>
<% else -%><%# end views, start no views -%>

<% if @recursion == 'yes' and @hintsfile -%>
zone "." IN {
    type hint;
    file "<%= @hintsfile %>";
};
<% end -%>

<% if !@zones.empty? -%>
<% @zones.sort_by {|key, value| key}.each do |key,value| -%>
zone "<%= key %>" IN {
<% value.each do |line| -%>
    <%= line %>;
<% end -%>
};

<% end -%>
<% end -%>
<% if @recursion == 'yes' -%>
include "<%= @rfc1912zones %>";
<% end -%>
<% end -%><%# end no views -%>
<% if !@includes.empty? -%>
<% @includes.each do |filename| -%>
include "<%= filename %>";
<% end -%>
<% end -%>

